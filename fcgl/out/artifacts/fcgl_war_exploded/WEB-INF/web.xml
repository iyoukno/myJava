    </servlet>
    <servlet-mapping>
        <servlet-name>HouseServlet</servlet-name>
        <url-pattern>/House_SL</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HouseLayerServlet</servlet-name>
