         version="4.0">
    <welcome-file-list>
        <welcome-file>homepage.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>AdmServlet</servlet-name>
        <servlet-class>com.yuk.controller.AdmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmServlet</servlet-name>
        <url-pattern>/Adm_SL</url-pattern>
    </servlet-mapping>

