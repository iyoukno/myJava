    </servlet>
    <servlet-mapping>
        <servlet-name>HouseLayerServlet</servlet-name>
        <url-pattern>/HL_SL</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApplyServlet</servlet-name>
        <servlet-class>com.yuk.controller.ApplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyServlet</servlet-name>
        <url-pattern>/Apply_SL</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ApplyShowServlet</servlet-name>
        <servlet-class>com.yuk.controller.ApplyShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyShowServlet</servlet-name>
        <url-pattern>/ApplyShow_SL</url-pattern>
    </servlet-mapping>

    <filter>
    <filter-name>ManagerFilter</filter-name>
    <filter-class>com.yuk.filter.ManagerFilter</filter-class>
</filter>
    <filter-mapping>
        <filter-name>ManagerFilter</filter-name>
        <url-pattern>/pages/adm/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>TransactionFilter</filter-name>
        <filter-class>com.yuk.filter.TransactionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TransactionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
